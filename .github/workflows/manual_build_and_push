name: Manual Build and Push

on:
  workflow_dispatch:
    inputs:
      version:
        description: 'Version to build (e.g., 3.0.4-alpha)'
        required: true
        default: '3.0.4-alpha'
      channel:
        description: 'Channel (alpha, beta, latest)'
        required: true
        default: 'latest'

permissions:
  contents: read
  packages: write

jobs:
  verify:
    name: "Verify and Build App"
    runs-on: ubuntu-latest
    outputs:
      node-version: ${{ steps.setup.outputs.node-version }}
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Environment
        uses: ./.github/actions/setup-node
        id: setup

      - name: Install Dependencies
        run: pnpm install --frozen-lockfile

      - name: Build App
        run: pnpm run build

      - name: Package Artifact
        run: |
          # Ensure the file exists before uploading
          if [ -f apps/home-assistant-matter-hub/package.tgz ]; then
            echo "Artifact found, proceeding to upload."
          else
            echo "Error: package.tgz not found in expected directory!"
            exit 1
          fi

      - name: Upload Artifact
        uses: actions/upload-artifact@v4
        with:
          name: package.tgz
          path: apps/home-assistant-matter-hub/package.tgz

  prepare-docker:
    name: "Prepare Docker"
    runs-on: ubuntu-latest
    outputs:
      dockerfiles: ${{ steps.dockerfiles.outputs.dockerfiles }}
    steps:
      - uses: actions/checkout@v4
      - name: Find Dockerfiles
        id: dockerfiles
        uses: ./.github/actions/find-dockerfiles

  docker:
    name: "Build and Push Docker Image"
    runs-on: ubuntu-latest
    needs: [prepare-docker, verify]
    permissions:
      packages: write
      contents: read
    strategy:
      fail-fast: false
      matrix:
        dockerfile: ${{ fromJSON(needs.prepare-docker.outputs.dockerfiles) }}
    steps:
      - uses: actions/checkout@v4

      - name: Set up QEMU
        uses: docker/setup-qemu-action@v3

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Login to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Download App Artifact
        uses: actions/download-artifact@v4
        with:
          name: package.tgz
          # PLACE IT INSIDE THE APP FOLDER
          path: apps/home-assistant-matter-hub/

      - name: Build and Push to GHCR
        uses: docker/build-push-action@v5
        with:
          # RUN THE BUILD FROM THE APP FOLDER
          context: apps/home-assistant-matter-hub
          file: ${{ matrix.dockerfile }}
          push: true
          tags: |
            ghcr.io/${{ github.repository_owner }}/home-assistant-matter-hub-addon:${{ github.event.inputs.version }}
            ghcr.io/${{ github.repository_owner }}/home-assistant-matter-hub-addon:latest
          build-args: |
            NODE_VERSION=${{ needs.verify.outputs.node-version }}
            PACKAGE_VERSION=${{ github.event.inputs.version }}
